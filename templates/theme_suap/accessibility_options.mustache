                    {{#str}} dyslexia_friendly, theme_suap {{/str}}
                </span>                
                <i class="fa-regular fa-circle-check icon-checked"></i>
            </label>
        </div>

        <div class="custom-checkbox-access">
            <input 
                type="checkbox" 
                v-model="preferences.remove_justify_align"
                class="checkbox-access-input" 
                id="remove-justify"
                @change="togglePreference('remove_justify_align', 'enabled', $event.target.checked)"
            >
            <label class="checkbox-access-label" for="remove-justify">
                <span class="label-container">
                    <i class="fa-solid fa-align-left icon-id"></i>
                    {{#str}} align_left, theme_suap {{/str}}
                </span>
                <i class="fa-regular fa-circle-check icon-checked"></i>
            </label>
        </div>
        
        <div class="custom-checkbox-access">
            <input 
                type="checkbox" 
                v-model="preferences.highlight_links"
                class="checkbox-access-input"
                id="highlight-links" 
                @change="togglePreference('highlight_links', 'enabled', $event.target.checked)">
            <label class="checkbox-access-label" for="highlight-links">
                <span class="label-container">
                    <i class="fa-solid fa-highlighter icon-id"></i>
                   {{#str}} highlight_links, theme_suap {{/str}}
                </span> 
                <i class="fa-regular fa-circle-check icon-checked"></i>
            </label>
        </div>

        <div class="custom-checkbox-access">
            <input 
                type="checkbox" 
                v-model="preferences.stop_animations"
                class="checkbox-access-input"
                id="stop-animations" 
                @change="togglePreference('stop_animations', 'enabled', $event.target.checked)">
            <label class="checkbox-access-label" for="stop-animations">
                <span class="label-container">
                    <i class="fa-solid fa-circle-pause icon-id"></i>
                    {{#str}} stop_animations, theme_suap {{/str}}
                </span>            
                <i class="fa-regular fa-circle-check icon-checked"></i>
            </label>
        </div>

        <div class="custom-checkbox-access">
            <input 
                type="checkbox"
                v-model="preferences.hidden_illustrative_image"
                class="checkbox-access-input" 
                id="hidden-illustrative-image"
                @change="togglePreference('hidden_illustrative_image', 'enabled', $event.target.checked)">
            <label class="checkbox-access-label" for="hidden-illustrative-image">
                <span class="label-container">
                    <svg class="icon-id" xmlns="http://www.w3.org/2000/svg" width="16" height="14" fill="none">
                        <path fill="#2B2B2B"
                            d="M11.524 5.731c5.46-.627 6.13 7.35.87 7.753-5.26.403-5.937-7.17-.87-7.753ZM11.234.5c.507 0 1.203.602 1.203 1.353V4.41a5.544 5.544 0 0 0-3.303.828c-.186.113-.894.705-.96.718-.164.028-.421-.457-.96-.154-.44.246-1.47 2.334-1.847 2.843-.077.099-.126.034-.216-.091-.333-.47-.654-1.387-1.46-1.053-.513.212-1.517 1.83-1.844 2.457-.28.537-.156.93.437.93l4.516.046.8 1.689H1.39v-.003c-.613 0-1.383-.75-1.383-1.343L0 1.95C0 .945.82.52 1.744.52 4.8.52 8.25.5 11.234.5Zm-.607 7.386c-.113.016-.28.105-.32.215-.323.505 1.102 1.258 1.054 1.529-.27.412-1.437 1.024-.988 1.574.45.55 1.311-.779 1.665-1 .416.267 1.076 1.419 1.616 1.042.74-.518-.997-1.365-.94-1.68.236-.397 1.457-1.047 1.02-1.52-.54-.582-1.276.663-1.696.943-.34-.238-.984-1.165-1.41-1.107v.004ZM3.707 5.27c1.72-.174 1.46-2.852-.416-2.566-1.617.248-1.36 2.747.417 2.566Z" />
