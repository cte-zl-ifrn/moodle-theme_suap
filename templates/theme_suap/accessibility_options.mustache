                    <span>{{#str}} hide_illustrative_images, theme_suap {{/str}}</span>
                </span>
                <i class="fa-regular fa-circle-check icon-checked"></i>
            </label>
        </div>

        <div class="custom-checkbox-access">
            <input 
                type="checkbox" 
                v-model="preferences.big_cursor"
                class="checkbox-access-input"
                id="big-cursor" 
                @change="togglePreference('big_cursor', 'enabled', $event.target.checked)">
            <label class="checkbox-access-label" for="big-cursor">
                <span class="label-container">
                    <i class="fa-solid fa-arrow-pointer icon-id"></i>
                    {{#str}} increase_cursor_size, theme_suap {{/str}}
                </span>
                <i class="fa-regular fa-circle-check icon-checked"></i>
            </label>
        </div>


        <div class="custom-checkbox-access">
            <input 
                type="checkbox"
                v-model="preferences.vlibras_active"
                class="checkbox-access-input"
                id="vlibras-active" 
                @change="togglePreference('vlibras_active', 'enabled', $event.target.checked)">
            <label class="checkbox-access-label" for="vlibras-active">
                <span class="label-container">
                    <i class="fa-solid fa-hands-asl-interpreting icon-id"></i>
                    {{#str}} enable_vlibras, theme_suap {{/str}}
                </span>
                <i class="fa-regular fa-circle-check icon-checked"></i>
            </label>
        </div>

        <div class="custom-checkbox-access">
            <input 
                type="checkbox" 
                v-model="preferences.high_line_height"
                class="checkbox-access-input" 
                id="high-line-height"
                @change="togglePreference('high_line_height', 'enabled', $event.target.checked)"
            >    
            <label class="checkbox-access-label" for="high-line-height">
                <span class="label-container">
                    <svg class="icon-id" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none">
                        <g clip-path="url(#a)">
                            <path fill="#2B2B2B"
                                d="M2.183 1.353c.523-.403.943-.5 1.507-.103.32.223 1.803 1.721 2.046 2.048.62.836.05 1.905-.98 1.683-.342-.074-.48-.214-.773-.503v7.021c.227-.226.43-.406.774-.48 1.026-.222 1.6.846.98 1.682-.244.327-1.73 1.826-2.047 2.05-.564.395-.984.299-1.507-.104C1.756 14.32.12 12.652.026 12.202c-.233-1.126 1.277-1.632 1.96-.703V4.504c-.686.93-2.196.423-1.962-.703.094-.454 1.732-2.118 2.159-2.448Zm12.94 10.652c1.17 0 1.17 1.979 0 1.979-1.91 0-4.34.004-6.283.004-1.103 0-1.13-1.972-.007-1.972v.003l6.29-.014Zm0-4.996c1.17 0 1.17 1.979 0 1.979L8.84 8.99c-1.103 0-1.13-1.971-.007-1.971v.004l6.29-.014Zm0-4.996c1.17 0 1.17 1.978 0 1.978l-6.283.003c-1.103 0-1.13-1.971-.007-1.971v.003l6.29-.013Z" />
                        </g>
                        <defs>
                            <clipPath id="a">
                                <path fill="#fff" d="M0 0h16v16H0z" />
                            </clipPath>
                        </defs>
                    </svg>
                    {{#str}} high_line_height, theme_suap {{/str}}
                </span>
                <i class="fa-regular fa-circle-check icon-checked"></i>
            </label>
        </div>

        <div :class="['selector-cycle-access', { active: preferences.zoom_level > 100}]">
            <label for="cycle-toggle">Zoom:</label>
            <button id="cycle-toggle" @click="cycleAccessibility" class="cycle-btn">
                <i class="fa-solid fa-magnifying-glass icon-id"></i>
                [[ preferences.zoom_level ]]%
                <div class="cycle-indicators">
                    <span v-for="(level, index) in preferences.zoom_options.filter(l => l > 100)" :key="level"
                        :class="['cycle-indicator', { active: level <= preferences.zoom_level }]"></span>
                </div>

            </button>
        </div>
</div>

{{#js}}
    require(['theme_suap/accessibility'], (module) => module.init());
{{/js}}